<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- RecyclerView to display the saved positions -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPositions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSendSms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Button to delete selected position -->
    <Button
        android:id="@+id/btnDeletePosition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delete Position"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/btnShowOnMap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="?attr/selectableItemBackground"
        android:textColor="@android:color/white" />

    <!-- Button to show selected position on map -->
    <Button
        android:id="@+id/btnShowOnMap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show on Map"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/btnSendSms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="?attr/selectableItemBackground"
        android:textColor="@android:color/white" />

    <!-- Button to send SMS to selected position -->
    <Button
        android:id="@+id/btnSendSms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send SMS"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="?attr/selectableItemBackground"
        android:textColor="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
